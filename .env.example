# Environment Variables Template
# Copy this file to .env and fill in your actual values

# SECURITY - REQUIRED
# Generate a strong secret key (minimum 32 characters)
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your-super-secret-key-minimum-32-characters-CHANGE-THIS

# API KEYS - REQUIRED
# Get your Hugging Face API key from: https://huggingface.co/settings/tokens
HF_API_KEY=your-huggingface-api-key-here

# Optional: OpenAI API key for GPT-based features
# OPENAI_API_KEY=your-openai-api-key-here

# SERVER CONFIGURATION
PORT=7860
FLASK_ENV=production
FLASK_DEBUG=False

# DATABASE (Optional - defaults to SQLite)
# For production, use PostgreSQL
# DATABASE_URL=postgresql://username:password@host:5432/database_name

# REDIS (Optional - for caching and sessions)
# REDIS_URL=redis://host:6379/0

# CORS CONFIGURATION
# Comma-separated list of allowed origins
# For development: http://localhost:3000,http://localhost:5173
# For production: https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# RATE LIMITING (Optional)
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# LOGGING
LOG_LEVEL=INFO

# FILE UPLOAD LIMITS
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# SESSION CONFIGURATION
SESSION_TIMEOUT_MINUTES=60
